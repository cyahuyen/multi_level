<?php

class Transaction_Model extends CI_Model {

    private $tbl = 'transactions';
    private $id = 'transaction_id';

    function __construct() {
        parent::__construct();
    }

    function check_batch($batch) {
        $r = $this->db->get_where($this->tbl, array('batch_number' => $batch))->result();

        if ($r) {
            return true;
        } else {
            return false;
        }
    }

    function getTransfers($from_userid, $data = array()) {
        $sql = 'SELECT * FROM ' . $this->tbl;

        $sql .= " WHERE from_userid='" . (int) $from_userid . "'";

        if (!empty($data['filter_from_date'])) {
            $sql .= " AND DATE_FORMAT(transaction_time, '%Y-%m-%d') >= '" . $data['filter_from_date'] . "'";
        }
        if (!empty($data['filter_to_date'])) {
            $sql .= " AND DATE_FORMAT(transaction_time, '%Y-%m-%d') <= '" . $data['filter_to_date'] . "'";
        }
        if (!empty($data['transaction_currency'])) {
            $sql .= " AND transaction_currency = '" . $data['transaction_currency'] . "'";
        }
        if (!empty($data['to_account'])) {
            $sql .= " AND to_account = '" . $data['to_account'] . "'";
        }
        if (!empty($data['batch_number'])) {
            $sql .= " AND batch_number = '" . $data['batch_number'] . "'";
        }
        if (!empty($data['amount'])) {
            $sql .= " AND amount = '" . $data['amount'] . "'";
        }

        $sql .=" ORDER BY transaction_time DESC";

        if (isset($data['start']) || isset($data['limit'])) {
            if ($data['start'] < 0) {
                $data['start'] = 0;
            }

            if ($data['limit'] < 1) {
                $data['limit'] = 20;
            }

            $sql .= " LIMIT " . (int) $data['start'] . "," . (int) $data['limit'];
        }

        $data = $this->db->query($sql)->result();

        return $data;
    }

    function totalTransfer($from_userid, $data = array()) {
        $sql = 'SELECT COUNT(transaction_id) as count FROM ' . $this->tbl;

        $sql .= " WHERE from_userid='" . (int) $from_userid . "'";
        if (!empty($data['filter_from_date'])) {
            $sql .= " AND DATE_FORMAT(transaction_time, '%Y-%m-%d') >= '" . $data['filter_from_date'] . "'";
        }
        if (!empty($data['filter_to_date'])) {
            $sql .= " AND DATE_FORMAT(transaction_time, '%Y-%m-%d') <= '" . $data['filter_to_date'] . "'";
        }
        if (!empty($data['transaction_currency'])) {
            $sql .= " AND transaction_currency = '" . $data['transaction_currency'] . "'";
        }
        if (!empty($data['to_account'])) {
            $sql .= " AND to_account = '" . $data['to_account'] . "'";
        }
        if (!empty($data['batch_number'])) {
            $sql .= " AND batch_number = '" . $data['batch_number'] . "'";
        }
        if (!empty($data['amount'])) {
            $sql .= " AND amount = '" . $data['amount'] . "'";
        }

        $result = $this->db->query($sql)->result();

        return $result[0]->count;
    }

    function getTransfer($id) {
        $data = $this->db->get_where($this->tbl, array($this->id => $id))->result();
        if ($data) {
            return $data[0];
        }
        else
            return false;
    }

    function save($data) {
        $this->db->insert($this->tbl, $data);

        return $this->db->insert_id();
    }

    function update($id, $data) {
        $this->db->where($this->id, $id);

        return $this->db->update($this->tbl, $data);
    }

}

