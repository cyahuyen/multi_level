<?php

class Currencies_model extends CI_Model {

    private $tbl = 'currencies';
    private $id = 'currencies_id';

    function __construct() {
        parent::__construct();
    }

    function ch_an($an) {
        $r = $this->db->get_where($this->tbl, array('code' => $an))->result();

        if ($r) {
            return true;
        } else {
            return false;
        }
    }

    function getCurrencies($active = NULL) {
        $s = 'SELECT * FROM ' . $this->tbl;

        if ($active != NULL) {
            $s.=" WHERE status= $active";
        }

        $c = $this->db->query($s)->result();

        return $c;
    }

    function getCrrencieById($id) {
        $r = $this->db->get_where($this->tbl, array($this->id => $id))->result();
        if ($r)
            return $r[0];
    }

    function getByCode($code) {
        $r = $this->db->get_where($this->tbl, array('code' => $code))->result();
        if ($r)
            return $r[0];
    }

    function save($data) {
        $this->db->insert($this->tbl, $data);

        return $this->db->insert_id();
    }

    function update($id, $data) {
        $this->db->where($this->id, $id);

        $this->db->update($this->tbl, $data);
    }

}