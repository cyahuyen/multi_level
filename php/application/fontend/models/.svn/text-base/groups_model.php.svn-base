<?php

class Groups_model extends CI_Model {

    private $tbl = 'groups';
    private $id = 'id';

    function __construct() {
        parent::__construct();
    }

    function getGroups() {
        $this->db->select('id, name');

        $q = $this->db->get($this->tbl);

        $cs = array();

        if ($q->result()) {
            foreach ($q->result() as $c) {
                $cs[$c->id] = $c->name;
            }
            return $cs;
        } else {
            return FALSE;
        }
    }

    function ca($active = NULL) { // count all
        if ($active != NULL) {
            $this->db->where('status', $active);
        }
        return $this->db->count_all_results($this->tbl);
    }

    function gp($l = NULL, $o = NULL, $ord = '') { //get a page
        $this->db->limit($l, $o);

        if (isset($ord) and ($ord != '')) {
            $this->db->order_by($ord);
        }
        else
            $this->db->order_by($this->id, 'asc');

        return $this->db->get($this->tbl);
    }

    function getGroup($id) {
        $r = $this->db->get_where($this->tbl, array($this->id => $id))->result();
        if ($r)
            return $r[0];
    }

    function save($data) {
        $this->db->insert($this->tbl, $data);

        return $this->db->insert_id();
    }

    function update($id, $data) {
        $this->db->where($this->id, $id);

        $this->db->update($this->tbl, $data);
    }

    function delete($id) {
        $this->db->where($this->id, $id);

        $this->db->delete($this->tbl);
    }

}

