<script type="text/javascript">
    function loadSetting(page){
        $.ajax({
            type: 'post',
            dataType: 'HTML',
            url: '<?php echo site_url('en/account/logs_user'); ?>/'+page,
            success: function(msg) {
                $('#logs').html(msg);
            }
        });
    }
    $('#logs').load('<?php echo site_url('en/account/logs_user'); ?>');
    
</script>




