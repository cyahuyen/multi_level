<script type="text/javascript">
    function changeView(id){
        $.ajax({
            url: '<?php echo site_url('services/view/'); ?>/'+id,
            type: 'get',
            dataType: 'HTML',
            success: function(msg) {
                $('#view').html(msg)
            }
        });
    }
</script>
<script type="text/javascript">
    $(document).ready(function(){
        $('#button-close').live('click',function(){
            $('#view').hide();
        })
        $('#button-view').live('click',function(){
            $('#view').show();    
        })
    });
</script>