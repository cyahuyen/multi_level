<?php

if (!defined('BASEPATH'))
    exit('No direct script access allowed');

class Faqs extends CI_Controller {

    var $data;

    function __construct() {
        parent::__construct();
        $this->load->database();
        $this->load->library('document');
        $this->load->helper('url');
        $this->lang->load('faqs');
        $this->load->model('faqs_model', '', TRUE);
    }

    public function index() {

        $this->document->setTitle($this->lang->line('headding_title'));

        $this->data['title'] = $this->document->getTitle();

        $this->data['headding_title'] = $this->lang->line('headding_title');

        $language_id = 16;

        $faqs = $this->faqs_model->getFaqs($language_id);

        $this->data['faqs'] = array();

        foreach ($faqs as $faq) {
            $this->data['faqs'][] = array(
                'faqs_id' => $faq->faqs_id,
                'name' => $faq->name,
                'description' => $faq->description,
            );
        }
        $this->data['main_content'] = 'services/faqs.php';

        $this->load->view('home', $this->data);
    }

}