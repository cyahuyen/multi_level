<script type="text/javascript">
    function changeView(id){
        $(".simple-tips").hide();
        $.ajax({
            url: '<?php echo site_url('setting/edit/'); ?>/'+id,
            type: 'get',
            dataType: 'HTML',
            success: function(msg) {
                $('#view').html(msg)
            }
        });
    }
</script>
<script type="text/javascript">
    $(document).ready(function(){
        $('#button-close').live('click',function(){
            $('#view').hide();
        })
        $('#button-view').live('click',function(){
            $('#view').show();    
        })

    });
</script>
<script type="text/javascript"><!--
    function changeEdit(id){        
        $.ajax({
            url: '<?php echo site_url('setting/edit'); ?>/'+id,
            type: 'post',
            dataType: 'json',
            data: $('#form_setting').serialize(),
            success: function(json) {
                if (json.success) {
                    $('#view').after('<div class="simple-tips"><ul><li>'+ json.success +  '</li></ul></div>');
                    $('#view').hide();
                    var group = $('#hd_group').val();
                    var page = $('#hd_page').val();
                    $('#list-setting').load('<?php echo site_url('setting/listSetting'); ?>/'+group+'/'+page);
                }	
            }
        });
    };
    //--></script> 
<script type="text/javascript">
    function loadSetting(id, page){
        $.ajax({
            type: 'post',
            dataType: 'HTML',
            url: '<?php echo site_url('setting/listSetting'); ?>/'+id+'/'+page,
            success: function(msg) {
                $('#list-setting').html(msg);
                $('#hd_group').val(id);
                $('#hd_page').val(page);
            }
        });
        
    }    
    $(document).ready(function(){ 
        loadSetting(0);
        $('#group_id').change(function(){
            var id = $('#group_id').val();
            loadSetting(id, 1);
        });
    });
    
</script>
