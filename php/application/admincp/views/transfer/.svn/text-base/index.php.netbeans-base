<script type="text/javascript">
    function changeView(id){
        $.ajax({
            url: '<?php echo site_url('transfer/view/'); ?>/'+id,
            type: 'get',
            dataType: 'HTML',
            success: function(msg) {
                $('#view').html(msg)
            }
        });
    }
</script>
<script type="text/javascript">
    $(function() {
        $( "#datepicker" ).datepicker({
            dateFormat: 'yy-mm-dd'
        });
    });
</script>
<script type="text/javascript">
    $(function() {
        $( "#datepicker2" ).datepicker({
            dateFormat: 'yy-mm-dd '
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function(){
        $('#button-close').live('click',function(){
            $('#view').hide();
            $('#showAdditional').show();
        })
        $('#button-view').live('click',function(){
            $('#view').show();    
            $('#showAdditional').hide();
            $('#advancedSearch').hide(); 
        })
        $('#showAdditional').live('click',function(){ 
            $('#view').hide();
            $('#advancedSearch').show();            
            $('#showAdditional').hide();
        })
    });
</script>