<?php

class Currencies_model extends CI_Model {

    private $tbl = 'currencies';
    private $id = 'currencies_id';

    function __construct() {
        parent::__construct();
    }

    function check_code($code) {
        $query = $this->db->get_where($this->tbl, array('code' => $code))->result();

        if ($query) {
            return true;
        } else {
            return false;
        }
    }

    function getByCode($code) {
        $sql = $this->db->get_where($this->tbl, array('code' => $code))->result();
        if ($sql)
            return $sql[0];
    }

    function getCurrencies($data = array()) {
        $sql = 'SELECT * FROM ' . $this->tbl;

        $sql.=" ORDER BY sort_order DESC";

        if (isset($data['start']) || isset($data['limit'])) {
            if ($data['start'] < 0) {
                $data['start'] = 0;
            }

            if ($data['limit'] < 1) {
                $data['limit'] = 20;
            }

            $sql .= " LIMIT " . (int) $data['start'] . "," . (int) $data['limit'];
        }

        $data = $this->db->query($sql)->result();

        return $data;
    }

    function totalCurrencies() {
        return $this->db->count_all_results($this->tbl);
    }

    function getCurrencie($id) {
        $data = $this->db->get_where($this->tbl, array($this->id => $id))->result();
        if ($data) {
            return $data[0];
        }
        else
            return false;
    }

    function save($data) {
        $this->db->query("INSERT INTO " . $this->tbl . " SET title='" . $data['title'] . "',code='" . $data['code'] . "',symbol_left='" . $data['symbol_left'] . "',symbol_right='" . $data['symbol_right'] . "',decimal_point='" . $data['decimal_point'] . "',thousands_point='" . $data['thousands_point'] . "',decimal_places='" . $data['decimal_places'] . "',value='" . $data['value'] . "',sort_order='" . $data['sort_order'] . "',status='" . $data['status'] . "',fee='" . $data['fee'] . "'");

        return $this->db->insert_id();
    }

    function update($id, $data) {
        $this->db->query("UPDATE " . $this->tbl . " SET title='" . $data['title'] . "',code='" . $data['code'] . "',symbol_left='" . $data['symbol_left'] . "',symbol_right='" . $data['symbol_right'] . "',decimal_point='" . $data['decimal_point'] . "',thousands_point='" . $data['thousands_point'] . "',decimal_places='" . $data['decimal_places'] . "',value='" . $data['value'] . "',sort_order='" . $data['sort_order'] . "',status='" . $data['status'] . "',fee='" . $data['fee'] . "' WHERE currencies_id='" . (int) $id . "'");
    }

    function updateFee($id, $data) {
        $this->db->query("UPDATE " . $this->tbl . " SET fee='" . $data['fee'] . "' WHERE currencies_id='" . (int) $id . "'");
    }

    function delete($id) {
        $this->db->where($this->id, $id);

        $this->db->delete($this->tbl);
    }

}