<?php

class Emails_model extends CI_Model {

    private $tbl = 'emails';
    private $id = 'email_id';
    private $email_des = 'emails_description';

    function __construct() {
        parent::__construct();
    }

    function check_code($code) {
        $query = $this->db->get_where($this->tbl, array('email_key' => $code))->result();

        if ($query) {
            return true;
        } else {
            return false;
        }
    }

    function getEmails($data = array()) {
        $sql = 'SELECT e.email_key,ed.* FROM ' . $this->tbl . ' as e';

        $sql .=' LEFT JOIN emails_description as ed ON e.email_id=ed.email_id GROUP BY email_id';

        if (isset($data['start']) || isset($data['limit'])) {
            if ($data['start'] < 0) {
                $data['start'] = 0;
            }

            if ($data['limit'] < 1) {
                $data['limit'] = 20;
            }

            $sql .= " LIMIT " . (int) $data['start'] . "," . (int) $data['limit'];
        }
        $data = $this->db->query($sql)->result();

        return $data;
    }

    function totalEmails() {
        return $this->db->count_all_results($this->tbl);
    }

    function getEmail($id) {
        $data = $this->db->get_where($this->tbl, array($this->id => $id))->result();
        if ($data) {
            return $data[0];
        }
        else
            return false;
    }

    function totalSettings($group) {
        $this->db->where('configuration_group_id', $group);
        $this->db->from('configuration');
        $count = $this->db->count_all_results();
        return $count;
    }

    function getEmailDescription($id) {
        $data = $this->db->get_where($this->email_des, array($this->id => $id))->result();
        $dataList = array();
        if ($data) {
            foreach ($data as $result) {
                $results['language_id'] = $result->language_id;
                $results['title'] = $result->title;
                $results['content'] = $result->content;
                $dataList[] = $results;
            }
            return $dataList;
        }
        else
            return array();
    }

    function save($data) {

        $this->db->query("INSERT INTO emails SET email_key='" . $data['email_key'] . "'");

        $email_id = $this->db->insert_id();

        foreach ($data['email_description'] as $language_id => $value) {
            $this->db->query("INSERT INTO emails_description SET email_id = '" . (int) $email_id . "', language_id = '" . (int) $language_id . "', title = '" . $value['title'] . "', content = '" . html_escape($value['content']) . "'");
        }

        return $this->db->insert_id();
    }

    function update($id, $data) {
        $this->db->query("UPDATE " . $this->tbl . " SET email_key='" . $data['email_key'] . "' WHERE email_id = '" . (int) $id . "'");

        $this->db->query("DELETE FROM " . $this->email_des . " WHERE email_id = '" . (int) $id . "'");

        foreach ($data['email_description'] as $language_id => $value) {
            $this->db->query("INSERT INTO " . $this->email_des . " SET email_id = '" . (int) $id . "', language_id = '" . (int) $language_id . "', title = '" . $value['title'] . "', content = '" .  html_escape($value['content']) . "'");
        }
    }

    function delete($id) {
        $this->db->query("DELETE FROM " . $this->tbl . " WHERE email_id='" . (int) $id . "' ");
        $this->db->query("DELETE FROM " . $this->email_des . " WHERE email_id='" . (int) $id . "'");
    }

}