<?php

class Faq_Model extends CI_Model {

    private $tbl = 'faqs';
    private $id = 'faqs_id';
    private $faq_des = 'faqs_description';

    function __construct() {
        parent::__construct();
    }

    public function getFaqs($data = array()) {
        $sql = 'SELECT f.sort_order,f.status,fd.* FROM ' . $this->tbl . ' as f';

        $sql .=' LEFT JOIN faqs_description as fd ON f.faqs_id=fd.faqs_id GROUP BY faqs_id';

        if (isset($data['start']) || isset($data['limit'])) {
            if ($data['start'] < 0) {
                $data['start'] = 0;
            }

            if ($data['limit'] < 1) {
                $data['limit'] = 20;
            }

            $sql .= " LIMIT " . (int) $data['start'] . "," . (int) $data['limit'];
        }

        $data = $this->db->query($sql)->result();

        return $data;
    }

    function totalfaqs() {
        return $this->db->count_all_results($this->tbl);
    }

    function getFaq($id) {
        $r = $this->db->get_where($this->tbl, array($this->id => $id))->result();
        if ($r) {
            return $r[0];
        }
        else
            return false;
    }

    function getfaqDescription($id) {
        $data = $this->db->get_where($this->faq_des, array($this->id => $id))->result();
        $dataList = array();
        if ($data) {
            foreach ($data as $result) {
                $results['language_id'] = $result->language_id;
                $results['name'] = $result->name;
                $results['description'] = html_entity_decode($result->description);
                $dataList[] = $results;
            }
            return $dataList;
        }
        else
            return false;
    }

    function save($data) {
        $this->db->query("INSERT INTO " . $this->tbl . " SET status='" . $data['status'] . "',sort_order='" . $data['sort_order'] . "'");

        $faq_id = $this->db->insert_id();

        foreach ($data['faq_description'] as $language_id => $value) {
            $this->db->query("INSERT INTO " . $this->faq_des . " SET faqs_id = '" . (int) $faq_id . "', language_id = '" . (int) $language_id . "', name = '" . $value['name'] . "', description = '" . html_escape($value['description']) . "'");
        }

        return $this->db->insert_id();
    }

    function update($id, $data) {

        $this->db->query("UPDATE " . $this->tbl . " SET status = '" . $data['status'] . "', sort_order = '" . $data['sort_order'] . "' WHERE faqs_id = '" . (int) $id . "'");

        $this->db->query("DELETE FROM " . $this->faq_des . " WHERE faqs_id = '" . (int) $id . "'");

        foreach ($data['faq_description'] as $language_id => $value) {
            $this->db->query("INSERT INTO " . $this->faq_des . " SET faqs_id = '" . (int) $id . "', language_id = '" . (int) $language_id . "', name = '" . $value['name'] . "', description = '" . html_escape($value['description']) . "'");
        }
    }

    function delete($id) {
        $this->db->query("DELETE FROM " . $this->tbl . " WHERE faqs_id='" . (int) $id . "' ");
        $this->db->query("DELETE FROM " . $this->faq_des . " WHERE faqs_id='" . (int) $id . "'");
    }

}

